{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "CommonJS", 
    "moduleResolution": "node", 
    "outDir": "./dist", 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "strict": true, 
    "resolveJsonModule": true, 
    "noImplicitAny": false, 
    "baseUrl": "./src", 
    "paths": {
      "*": ["node_modules/*", "src/types/*"] 
    }
  },
  "include": [
    "src/**/*.ts" 
  ]
}